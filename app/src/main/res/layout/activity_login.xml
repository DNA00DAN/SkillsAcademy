<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorSasolPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tvSill"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="12dp"
                android:paddingTop="16dp"
                android:text="SKILLS ACADEMY"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="350dp"
                android:src="@drawable/sasol" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorSasolThird"
            android:text="-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------" />


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome to Sasol Skills Academy"
        android:id="@+id/tv3"
        android:layout_below="@+id/tvLogin"
        android:layout_alignStart="@+id/tvLogin"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please login with your Sasol Personnel Number:"
        android:id="@+id/tv4"
        android:layout_below="@+id/tv3"
        android:layout_alignStart="@+id/tv3"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:ems="10"
        android:id="@+id/etPNumber"
        android:background="#ffffff"
        android:layout_below="@+id/tv4"
        android:layout_alignStart="@+id/tv4"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password:"
        android:id="@+id/tv5"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_below="@+id/etPNumber"
        android:layout_alignStart="@+id/etPNumber" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:ems="10"
        android:id="@+id/etPassword"
        android:background="#ffffff"
        android:layout_below="@+id/tv5"
        android:layout_alignStart="@+id/tv5"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:password="true"
        android:textSize="20dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bLogin"
        android:layout_below="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_marginTop="60dp"
        android:background="@drawable/item_selector_two"
        android:text="LOGIN"
        android:textColor="#000000"
        android:textSize="20dp"
        android:enabled="true" />


</LinearLayout>
</ScrollView>